

<style>
#table {
  
  border-collapse: collapse;
  width: 100%;
}

#table thead {
  border: 1px solid #ddd;
  padding: 8px;
}

#table tr:nth-child(even){background-color: #f2f2f2;}

#table tr:hover {background-color: #ddd;}

table td {
    border: 1px solid #ddd;
    padding:8px;
    text-align: center;
}
table th {
    border: 1px solid  #ddd;
    padding:8px;
    text-align: center;
}

</style>

<div>
    <h1 style="text-align: center;">Association les colombes</h1>
    <center><h2 style="text-align: center;">Liste des volontaires</h2></center>
    <center>
            <table id="table" class="table table-striped table-hover" cellspacing="0" cellpadding="55%">
                <thead>
                    <tr>

                        <th style="width:40%;text-align:left;">
                            Nom
                        </th>
                        <th style="width:40%;">Email</th>  
                        <th style="width:20%;">Date</th>                                      
                        
                    </tr>
                </thead>
                <tbody>
                {% for entity in entity %}
                <tr valign="bottom">    
                    
                    <td style="width:40%; text-align:left;"> {{ entity.name }}</td>
                    <td style="width:40%; text-align:left;"> {{ entity.email }}</td>
                    <td style="width:20%;"> {{ entity.date|date("d/m/y") }}</td>
                    
                    
                </tr>
                {% endfor %}
                </tbody>                                
            </table>   
        </center>
</div>
