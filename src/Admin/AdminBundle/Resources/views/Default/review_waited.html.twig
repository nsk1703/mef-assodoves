                return '<div class=""style="padding-bottom:10px; padding-top:10px; width:100%;">'+
                        '<div class="card mb-1" style="border:0px; box-shadow:unset; height:130px;">'+
                            '<div class="">'+
                              '<div class="card-body" style="">'+
                                '<div class="card-text" style="margin-top:-10px;">'+
                                  '<div class="article_content">'+row.content+'</div>'+
                                '</div>'+
                                '<div class="post-meta" style="margin-top:10px;font-size:12px; color: #8d8d8d;font-weight:200;">'+
                                '<div class="post-meta-content"> <span class="far fa-clipboard" style="margin-right:5px;"></span> <span class="article_title_content">'+row.article+'</span>'+  
                                    '<span class="post-views" style="margin-left:10px; margin-bottom:10px;"> <i class="far fa-user" style="margin-right:7px;"></i> '+row.email+'</span> <span class="placeholder-post-read-later"></span>'+
                                    '<span class="post-views" style="margin-left:10px; color: #8d8d8d;"><span class="" style="  margin-right:5px;"><span class="fa fa-clock" style="font-size:10px; color: #00b8b1;"></span>le</span>'+
                                    '<span>'+row.date+'</span>'+
                                    '</span> <br><br>'+
                                    
                                      '<a  href="#" onclick="openEditModal('+data+');" class="edit-btn" style="border:1px solid #8d8d8d; border-radius:30px; color:#8d8d8d;font-size:13px;padding:5px 15px; margin-right:10px;">Afficher</a>'+
                                      '<a href="#" onclick="openDeletModal('+data+');" class="delete-btn" style="border:1px solid #8d8d8d; border-radius:30px; color:#8d8d8d;font-size:13px;padding:5px 15px;">Supprimer</a>'+

                                  '</div>'+
                                '</div>'+
                              '</div>'+
                            '</div>'+
                        '</div>'+
                      '</div>'
            }    
        
         },
        ],
      order: [
            [0, 'desc']
        ]
    });
       
  });



//open edit modal form
function openDeletModal(id){
 
 $.ajax({
   type: 'get', 
     url: Routing.generate('admin_review_item_data', {id: id}),
     success: function(data) {
       $( "#appbundle_review_delete_id" ).val(data.id);   
       $(".entity_name").text(data.email); 
       $(".entity_article").text(data.article); 
       $('#deleteEntityModal').modal('show');   
     }
 });

 
}

//open edit modal form
function openEditModal(id){
 
 $.ajax({
   type: 'get', 
     url: Routing.generate('admin_review_item_data', {id: id}),
     success: function(data) {
       $( "#appbundle_review_edit_id" ).val(data.id);   
       $(".entity_name").text(data.email); 
       $(".entity_article").text(data.article); 
       $(".entity_content").text(data.content); 
       $('#editEntityModal').modal('show');   
     }
 });

 
}





