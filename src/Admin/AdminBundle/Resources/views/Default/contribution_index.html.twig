{% extends "layout/admin.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('plugins/datatables-bs4/css/dataTables.bootstrap4.min.css') }}">
    <link rel="stylesheet" href="{{ asset('plugins/datatables-responsive/css/responsive.bootstrap4.min.css') }}">
{% endblock %}
{% block content %}
 <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Dons</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Acceuil</a></li>
              <li class="breadcrumb-item active">Dons</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

<style>
  .products-list .product-info {
     margin-left: 16px; 
     margin-right: 16px; 
}
.item{
  padding:8px;
}

</style>



  <!-- Data Table area Start-->
  <section class="content" style="margin-bottom:30px;">
      <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                  <div class="widget-tabs-int" style="background: #fff; border-radius:5px; box-shadow: 0 0 1px rgba(0, 0, 0, 0.17);">
                      <div class="tab-hd" style="border-bottom: 1px solid #dadce0; padding-left:16px; padding-right:16px; padding-top:10px; padding-bottom:10px;">
                          <p style="position:relative; top:10px;">Liste des dons re√ßu</p>
                      </div>
                          <div class="form_body" style="padding-top:16px; padding-bottom:30px; padding-left:16px; padding-right:16px;">
                            <div class="data-table-area">
                              <table id="dataTable" class="table table-striped" style="width:100%;">
                                  <thead>
                                      <tr>
                
                                          <th>Email</th>
                                          <th>Nom</th>  
                                          <th>Apport</th>
                                          <th>Date</th>                                      
                                         
                                      </tr>
                                  </thead>
                                  <tbody>
                                   {% for contribution in contribution %}
                                    <tr>    
                                       
                                        <td>{{ contribution.info.userEmail }}</td>
                                        <td>{{ contribution.info.userName }}</td>
                                        <td>{{ contribution.info.amount }}</td>
                                        <td>{{ contribution.date|date("d") }}/{{ contribution.date|date("F") }}/{{ contribution.date|date("y") }}</td>
                                        
                                        
                                    </tr>
                                    {% endfor %}
                                  </tbody>                                
                              </table>
                            </div>
                            </div>
                            <div class="form-footer text-right" style="border-top: 1px solid #dadce0; padding-top:10px; padding-bottom:10px;">
                              <a href="{{ path('admin_contribution_make_pdf') }}" class="btn" style="border:none; color: #1a73e8; font-weight:500; font-size:14px;">Imprimer <i class="fa fa-print"></i>    </a>
                            </div>
                  </div>
              </div>
      </div>

  </section>
  <!-- Data Table area End-->

{% endblock %}


{% block modals %}{% endblock %}

{% block javascript %}




    <!-- Page level plugins -->
    <script src="{{ asset('plugins/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('plugins/datatables-bs4/js/dataTables.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('plugins/datatables-responsive/js/dataTables.responsive.min.js') }}"></script>
    <script src="{{ asset('plugins/datatables-responsive/js/responsive.bootstrap4.min.js') }}"></script>


    <script>
    // Call the dataTables jQuery plugin

    $('#dataTable').DataTable({
        "processing": true,
        "paging": true,
        "lengthChange": true,
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true
    });

  

  </script>

{% endblock %} 