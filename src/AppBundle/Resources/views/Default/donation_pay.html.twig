{% extends "layout/base.html.twig" %}
{% block content %}

<div class="page_pay_content">
    <div class="page_container">
        <div class="container">
            <h3 class="text-center" style="font-size: 20px; margin-bottom:20px;">Participez au projet</h3>
            <div class="card fundraising-card" style="margin-bottom:20px;">
                <div class="card-body">
                    
                        <div class="fundraising-name">
                            <div class="fundraising-heading-image"></div>
                            <h2 class="fundraising-heading text-left">
                            {{entity.title}}
                            </h2>
                            <a href="{{ path('app_cause_show', { 'slug' : entity.slug }) }}" class="fundraising-back" style="padding-top:10px;">
                                <span class="fa fa-arrow-left"></span> Retour
                            </div>
                        </a>
                </div>
            </div>
            {{ form_start(form, {'attr': {'class': 'form-horizontal newEntityForm'}}) }}


                <div class="card fundraising-card">
                    <div class="card-body">
                        <p class="card-title text-center" style="color: #282828;">
                            Indiquer votre identité: 
                        </p>
                        <div class="form-group  row">
                            <div class="col-lg-6 col-sm-12" style="padding-bottom:10px;">        
                                {{ form_label(form.name, "Nom", {'label_attr': {'style': 'display:none;'}}) }}
                                <div class="nk-int-st">
                                {{ form_errors(form.name) }}
                                {{ form_widget(form.name, {'attr': {'placeholder': 'Nom'}}) }}                   
                                </div>
                            </div> 
                            <div class="col-lg-6 col-sm-12" style="padding-bottom:10px;">        
                                {{ form_label(form.surname, "Prénom", {'label_attr': {'style': 'display:none;'}}) }}
                                <div class="nk-int-st">
                                {{ form_errors(form.surname) }}
                                {{ form_widget(form.surname, {'attr': {'placeholder': 'Prénom'}}) }}                   
                                </div>
                            </div>  
                        </div>
                        <div class="form-group  row">
                            <div class="col-lg-12">        
                                {{ form_label(form.email, "Email", {'label_attr': {'style': 'display:none;'}}) }}
                                <div class="nk-int-st">
                                {{ form_errors(form.email) }}
                                {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}                   
                                </div>
                            </div>  
                        </div>


                        <div class="text-center" style="padding-top:10px;">
                            {{ form_widget(form.newsletterAccept, {'attr': {'style': 'height:12px; width:12px;'}}) }}   
                            {{ form_label(form.newsletterAccept, "J'accepte de recevoir des communications par email", {'label_attr': {'style': ''}}) }}
                        
                        </div>
                    </div>
                </div>



                <div class="card fundraising-card" >
                    <div class="card-body">
                        <div class="text-center">
                            {{ form_label(form.amount, "Choisissez le montant de votre participation :", {'label_attr': {'style': ';'}}) }}<label ></label>
                        </div>
                        <div class="form-group text-center" style="padding-bottom:10px; padding-top:10px;">
                            <div class="col-lg-12">        
                                
                                <div class="nk-int-st">
                                {{ form_errors(form.amount) }}
                                {{ form_widget(form.amount, {'attr': {'style': 'width:300px; text-align:center; margin-left:20px;','placeholder': '0'}}) }}                   
                                <span class="fa fa-euro-sign" style=""></span>
                                </div>
                            </div>  
                            
                        </div>
                        <div class="text-center">
                            {{ form_widget(form.maskDonatorAccept, {'attr': {'checked': 'checked','disabled': 'disabled','style': 'height:12px; width:12px;'}}) }}   
                            {{ form_label(form.maskDonatorAccept, "Participations masquées par défaut", {'label_attr': {'style': ''}}) }}
                        
                        </div>
                    </div>
                </div>

                <div class="card fundraising-card">
                    <div class="card-body fundraising-contribution">
                        <p class="text-center" style="line-height: 1.3em;
                        color: #222;">Choisissez votre moyen de paiement :</p>

                            <ul class="list-payment-method" style="margin-bottom:16px; margin-top:16px;">
                                <li data-children-count="1" style="margin-bottom:5px;">
                                    {{ form_errors(form.payMethod[0], {'attr': {'checked': 'checked'}}) }}
                                    {{ form_widget(form.payMethod[0]) }}

                                    <img class="logo-payment-method logo-visa" src="https://editor-assets.abtasty.com/45791/5e25b41abb0271579529242.png" alt="visa">
                                    {{ form_label(form.payMethod[0], "", {'label_attr': {'style': 'display:none;'}}) }}
                                    
    
                                </li>
                                <li data-children-count="1" style="margin-bottom:5px;">
                                    {{ form_errors(form.payMethod[1]) }}
                                    {{ form_widget(form.payMethod[1]) }}

                                    <img class="logo-payment-method logo-mastercard" src="https://asset.leetchi.com/Content/Longane/dist/img/logo/payment/logo-payment-mastercard.png?v=28336c42f7e6401382dcce466d3bd570" alt="mastercard">
                                    {{ form_label(form.payMethod[1], "", {'label_attr': {'style': 'display:none;'}}) }}

                                </li>
                                <li data-children-count="1" style="margin-bottom:10px;">
                                    {{ form_errors(form.payMethod[2]) }}
                                    {{ form_widget(form.payMethod[2]) }}

                                    <img class="logo-payment-method logo-paylib" src="https://editor-assets.abtasty.com/45791/5e25b424e1b811579529252.png" style="height: 34px;" alt="paylib">
                                    {{ form_label(form.payMethod[2], "", {'label_attr': {'style': 'display:none;'}}) }}

        
                                </li>
                            </ul>


                            <div class=" text-center">
                                {{ form_widget(form.conditionsAccept, {'attr': {'style': 'height:12px; width:12px;'}}) }}   
                                <label for="appbundle_donation_conditionsAccept"> J'ai lu et j'accepte les <a class="" href="/fr/privacy">Politique de confidentialité</a></label>
                            

                            </div>


                            <div class="btn-container btn-contribute-container text-center" style="margin-top:16px;">
                                <button type="submit" class="btn " style="border: none;
                                color: #fff !important;
                                font-size: 13px !important;
                                background-color: #00b8b1;
                                padding: 10px 40px !important;
                                font-weight: 500 !important;
                                box-shadow: 0 2px 12px -6px #00b8b1!important;
                        
                            
                            ">
                                Participer de <span class="amount-checkout">0</span> €
                                </button>
                                </div>


                                {{ form_errors(form.cause) }}
                                {{ form_widget(form.cause, {'attr': {'value': entity.id  }}) }} 


                                {{ form_widget(form) }} 
                    </div>
                </div>
                <p class="text-center">Chez association les colombes, vos transactions sont assurées sans frais cachés et en toute sécurité par le Crédit Mutuel Arkéa</p>
                <div class="securityContainer text-center">
                    <img src="https://editor-assets.abtasty.com/45791/5e15bbd2e7a1e1578482642.png">
                    <img src="https://editor-assets.abtasty.com/45791/5e15bbfbbbbb11578482683.png">
                    <img src="https://editor-assets.abtasty.com/45791/5e15bc1a1adae1578482714.png">
                </div>
            {{ form_end(form) }}
        </div>
    </div>

</div>



<section id="sectionSecurityContact" class="section section-security-faq" style="background: #fff; height:100px; margin-top:40px;">
    <div class="container">
        <div class="content">
            <ul class="list-security">
                <li class="list-security__item">
                    
                    <svg src="{{asset('images/logo-security-visa.svg')}}')">
                    Verified by VISA
                   
                </li>
                <li class="list-security__item">
                    <div class="list-security__link mastercard">
                    MasterCard SecureCode
                    </div>
                </li>
                <li class="list-security__item">
                    <div class="list-security__link payline">
                    Payline
                    </div>
                </li>
                <li class="list-security__item">
                    <div class="list-security__link norton">
                    Norton secured, powered by VeriSign
                    </div>
                </li>
            </ul>
        </div>

    </div>


</section>

{% endblock %}

{% block javascript%}
<script>
    
    $('.participation').on("change", function() {
        $('.amount-checkout').html($(this).val());
      });
</script>
{% endblock %}