{% block javascript%}
<script>

    $( "#appbundle_member_image_name" ).val("");
      function readURL(input) 
     {
     
       if (input.files && input.files[0]) {
         var reader = new FileReader();
     
         reader.onload = function(e){
           $('.fileContainer').css('background-image', 'url(' + e.target.result+ ')');          
         }
         reader.readAsDataURL(input.files[0]);
       }
     }
     $('#appbundle_member_image_file').change(function(e){
         readURL(this);
         var fileName = e. target. files[0]. name;
         $( "#appbundle_member_image_name" ).val( fileName );
         $('.default_file_input_message').hide();
     }); 
   
   
   
   
   
   
   
       </script>
