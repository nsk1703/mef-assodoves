{% extends "layout/base.html.twig" %}      
   
{% block content %}
<style>
    .fileContainer{
        background: #fff;
        border-radius: 3px;
        border: 1px solid rgba(0,0,0,0.03);
        min-height: 250px;
        width: 100%;
        margin-top:10px;
        padding-bottom: 0px;

    }
    .fileContainer, .fileEditContainer {
        position: relative;
        }
        
        input[type="file"] {
        cursor: inherit;
        visibility: hidden;
        font-size: 16px;
        min-height: 100%;
        min-width: 100%;
        left: 0px;
        text-align: right;
        top: -10px;
        z-index: -1;
        outline: none;
        }
        
        input[type="file"]:focus {
        outline: none;
        }
        /* Example stylistic flourishes */
        
        .fileContainer {
        cursor: pointer;
        }  


</style>
